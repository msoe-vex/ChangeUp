 {
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "panel": "new"
    },
    "tasks": [
        {
            "label": "Quick PROS V5HAL Build",
            "type": "shell",
            "command": "./build.sh -q",
            "options": {
                "cwd": "${workspaceFolder}/src/V5HAL"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Full PROS V5HAL Build",
            "type": "shell",
            "command": "./build.sh",
            "options": {
                "cwd": "${workspaceFolder}/src/V5HAL"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "PROS V5HAL Clean",
            "type": "shell",
            "command": "prosv5 make clean",
            "options": {
                "cwd": "${workspaceFolder}/src/V5HAL"
            }
        },
        {
            "label": "Upload PROS V5HAL",
            "type": "shell",
            "command": "prosv5 upload",
            "options": {
                "cwd": "${workspaceFolder}/src/V5HAL"
            },
            "problemMatcher": {
                "owner": "prosv5",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): +(warning|error): +(.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        }
    ]
}